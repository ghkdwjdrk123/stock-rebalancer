# ====== Runtime / App ======
APP_ENV=dev
TZ=Asia/Seoul

# Dry-run 기본값(true면 KIS API 미호출 시뮬레이션)
DRY_RUN=true

# Rebalance 기본 파라미터(옵션)
DEFAULT_BAND_PCT=1.0
DEFAULT_ORDER_STYLE=market
MAX_ORDER_VALUE_PER_TICKER=10000000


# ====== KIS Base URLs ======
# 운영: https://openapi.koreainvestment.com:9443
# 모의: https://openapivts.koreainvestment.com:29443
KIS_BASE=
KIS_BASE_DEV=
KIS_WS_DEV=


# ====== KIS Credentials ======
KIS_APP_KEY=
KIS_APP_SECRET=

# 계좌번호 (8자리) / 상품코드(예: 01)
KIS_ACCOUNT_8=
KIS_ACCOUNT_PD=01


# ====== KIS REST Paths & TR_IDs (env 우선, 미설정 시 코드의 기본값 사용) ======
# 잔고조회
# 기본 PATH: /uapi/domestic-stock/v1/trading/inquire-balance
# 기본 TR:   VTTC8434R (모의)
KIS_PATH_BALANCE=
KIS_TR_BALANCE=

# 현금주문
# 기본 PATH: /uapi/domestic-stock/v1/trading/order-cash
# 기본 TR:   매수 VTTC0802U / 매도 VTTC0801U (모의)
KIS_PATH_ORDER_CASH=
KIS_TR_ORDER_BUY=
KIS_TR_ORDER_SELL=

# 현재가조회
# 기본 PATH: /uapi/domestic-stock/v1/quotations/inquire-price
# 기본 TR:   FHKST01010100
KIS_PATH_PRICE=
KIS_TR_PRICE=

# 휴장일 조회 (설정 없으면 보수적으로 영업일 처리)
KIS_PATH_HOLIDAYS=
KIS_TR_HOLIDAYS=

# 장운영 상태 조회 (설정 없으면 시간 가드 폴백)
KIS_PATH_MARKETSTATUS=
KIS_TR_MARKETSTATUS=


# ====== Examples ======
# 모의환경 예시
# KIS_BASE=https://openapivts.koreainvestment.com:29443
# KIS_APP_KEY=your_app_key
# KIS_APP_SECRET=your_app_secret
# KIS_ACCOUNT_8=12345678
# KIS_ACCOUNT_PD=01
# KIS_TR_BALANCE=VTTC8434R
# KIS_TR_ORDER_BUY=VTTC0802U
# KIS_TR_ORDER_SELL=VTTC0801U

# 운영환경 전환 시
# KIS_BASE=https://openapi.koreainvestment.com:9443